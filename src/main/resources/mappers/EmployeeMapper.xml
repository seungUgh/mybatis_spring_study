<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis_spring_study.mapper.EmployeeMapper">
	
	<insert id="insertEmployee" parameterType="Employee">
		INSERT INTO EMPLOYEE (EMPNO, EMPNAME, TITLE, MANAGER, SALARY, DNO) VALUES (#{empNo}, #{empName}, #{title}, #{manager.empNo}, #{salary}, #{dept.deptNo})
	</insert>
	
	<delete id="deleteEmployee" parameterType="Employee">
		DELETE FROM EMPLOYEE WHERE EMPNO = #{empNo}
	</delete>
	
</mapper>
